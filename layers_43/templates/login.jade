extends ./partials/_base.jade

block title
  title 43 Layers - Log in

block content
  include ./partials/_header.jade
  .content
    .login
      .container
        .row
          .col-md-4.col-md-offset-4
            form(role="form", method="POST", id="login_form", action="{% url 'login' %}")
              -csrf_token
              h1.text-center Log In
              .form-group
                input.form-control(type="text", name="email", placeholder="Email")
              .form-group
                input.form-control(type="password", name="password", placeholder="Password")
            button.btn.btn-primary.btn-block(type="submit", value="submit", form="login_form") Log in
            p.signup
              | Don't have an account? 
              a(href="signup.html") Sign up
  include ./partials/_footer.jade